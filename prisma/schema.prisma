// prisma/schema.prisma
// Schéma Prisma optimisé pour Devine la Zik

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  pseudo         String?         @unique
  accounts       Account[]
  sessions       Session[]
  players        Player[]
  musicPrefs     MusicPreference?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  // Soft-delete et conformité RGPD
  deletedAt      DateTime?

  @@map("users")
}

model Account {
  id                String   @id @default(cuid())
  userId            String   @map("user_id")
  type              String
  provider          String   // google, discord, spotify
  providerAccountId String   @map("provider_account_id")
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Room {
  id         String    @id @default(cuid())
  code       String    @unique
  hostId     String
  status     String    // open, playing, ended
  createdAt  DateTime  @default(now())
  rounds     Int       @default(5)
  roundDuration Int    @default(30)

  players    Player[]
  game       Game?

  @@map("rooms")
}

model Player {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  score     Int      @default(0)
  ready     Boolean  @default(false)
  ranking   Int?
  joinedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  answers   Answer[]

  @@unique([userId, roomId])
  @@map("players")
}

model MusicPreference {
  id                  String   @id @default(cuid())
  userId              String   @unique
  selectedPlaylistIds String   // CSV ou JSON stringifié d'IDs de playlists
  useLikedTracks      Boolean  @default(true)
  useHistory          Boolean  @default(false)

  user                User     @relation(fields: [userId], references: [id])

  @@map("music_preferences")
}

model Game {
  id                   String    @id @default(cuid())
  roomId               String    @unique
  state                String    // waiting, running, finished
  currentQuestionIndex Int       @default(0)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  startedAt            DateTime?
  endedAt              DateTime?

  room                 Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  questions            Question[]
  answers              Answer[]

  @@map("games")
}

model Question {
  id             String   @id @default(cuid())
  gameId         String
  type           String   // audio, image
  question       String
  previewUrl     String?
  correctAnswer  String
  choices        String[] // Tableau de choix possibles
  trackId        String?  // ID Spotify de la piste
  imageUrl       String?
  order          Int      // Ordre de la question dans le jeu
  points         Int      @default(10)
  timeLimit      Int      @default(30) // Temps en secondes

  game           Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  answers        Answer[]

  @@map("questions")
}

model Answer {
  id          String    @id @default(cuid())
  gameId      String
  questionId  String
  playerId    String
  answer      String
  isCorrect   Boolean
  points      Int       @default(0)
  timeSpent   Int?      // Temps mis en secondes
  submittedAt DateTime  @default(now())

  game        Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([questionId, playerId])
  @@map("answers")
}